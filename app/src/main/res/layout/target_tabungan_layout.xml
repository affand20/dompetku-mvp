<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="20dp"
    app:cardCornerRadius="5dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    app:cardElevation="3dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            tools:text="PC Gaming Rakitan"
            android:textSize="18sp"
            android:textColor="@color/default_text"
            android:id="@+id/judul_tabungan"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/target_tabungan"
            tools:text="Rp5.500.000"
            android:textColor="@color/default_text"
            android:layout_alignParentEnd="true"
            android:textStyle="bold"
            />
        <View
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:background="@color/progress_background"
            android:layout_below="@id/judul_tabungan"
            />
        <View
            android:layout_width="250dp"
            android:layout_height="3dp"
            android:background="@color/pemasukan"
            android:layout_marginTop="25dp"
            android:layout_below="@id/judul_tabungan"
            android:id="@+id/progress"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            app:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/accent"
            app:strokeWidth="2dp"
            android:text="Tandai Sudah Tercapai"
            android:textColor="@color/accent"
            android:textAllCaps="false"
            android:id="@+id/btn_set_tercapai"
            />
        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress"
            android:layout_marginTop="20dp"
            android:layout_alignParentEnd="true"
            app:backgroundTint="@color/accent"
            app:strokeColor="@color/accent"
            app:strokeWidth="2dp"
            android:text="Sudah Tercapai"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:id="@+id/btn_tercapai"
            />
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>