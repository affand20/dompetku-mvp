<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/main_gradient"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/white_transparent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Pemasukan"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:id="@+id/sub_title_laporan"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sub_title_laporan"
            android:layout_marginTop="14dp"
            tools:text="Rp 400.000"
            android:textSize="42sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:id="@+id/nominal"
            />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="49dp"
            android:layout_below="@id/nominal"
            android:elevation="12dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/btn_layout"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Pemasukan"
                android:id="@+id/show_pemasukan"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.9"
                android:text="|"
                android:textColor="@android:color/white"
                android:textSize="30sp"

                android:textAlignment="center"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Pengeluaran"
                android:textAllCaps="false"
                android:id="@+id/show_pengeluaran"
                android:textColor="@color/progress_background"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                />
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:nestedScrollingEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/list_laporan"
            android:layout_below="@id/btn_layout"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="100dp"
            />

    </RelativeLayout>
</ScrollView>